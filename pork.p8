-- tools
function get_frame(ani)
	return ani[flr(t/8)%#ani+1]
end

function draw_spr(_spr,_x,_y,_c)
	palt(0,false) -- make black opaque
	pal(6,_c)	-- make grey into yellow
	spr(_spr,_x,_y)
	pal() -- switch palette back
end
